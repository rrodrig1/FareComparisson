<div class="page-header">
  <h1>
    Anticipations
    <% if current_user != nil && current_user.id ==1 %>
    <a href="/anticipations/new" class="btn btn-lg btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>
    <% end %>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr class="info">
        <th>Description</th>
        <th>Advance</th>
        <% if current_user != nil && current_user.id ==1 %>
        <th>Actions</th>
        <% end %>
      </tr>

      <% @anticipations.each do |anticipation| %>
      <tr>
        <td><%= anticipation.description %></td>
        <td><%= anticipation.advance %> minutes</td>
        <% if current_user != nil && current_user.id ==1 %>
        <td>
          <a href="/anticipations/<%= anticipation.id %>" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i></a>
          <a href="/anticipations/<%= anticipation.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, { controller: 'anticipations', action: 'destroy', id: anticipation.id }, data: {confirm: 'Are you sure you want to delete the anticipation?'}, class: "btn btn-danger" %>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
