<div class="page-header">
  <h1>
    Routes
    <a href="/routes/new" class="btn btn-lg btn-success">New Route</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Passengers</th>
        <th>Frecuency</th>
        <th>Departure</th>
        <th>Destination</th>
        <th>Source</th>
        <th>Anticipation</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @routes.each do |route| %>
      <tr>
        <td><%= route.user_id %></td>
        <td><%= route.passengers %></td>
        <td><%= route.frecuency %></td>
        <td><%= route.departure %></td>
        <td><%= route.destination %></td>
        <td><%= route.source %></td>
        <td><%= route.anticipation_id %></td>
        <td><%= route.name %></td>
        <td>
          <a href="/routes/<%= route.id %>" class="btn btn-primary">Show</a>
          <a href="/routes/<%= route.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_route/<%= route.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
