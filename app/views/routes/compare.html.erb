<div class="page-header">
  <h3>Comparisson for Route <%= @route.name %></h3>
</div>

<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">


    <dl class="dl-horizontal">

      <dt>Source</dt>
      <dd><%= @route.source %></dd>

      <dt>Destination</dt>
      <dd><%= @route.destination %></dd>

      <dt>Passengers</dt>
      <dd><%= @route.passengers %></dd>
    </dl>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>
            Service Type
          </th>
          <th>
            Uber
          </th>
          <th>
            Lyft
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @route.passengers <=2 %>
        <tr>
          <td>
            Shared
          </td>
          <td>
            <% if @surge1 > 1 %>
            Service Unavailable due to Surge Pricing
            <% else %>
            <%= @uberd1 %>: <%= @uberp1 %>
            <% end %>
          </td>
          <td>
            <% if @surge1 > 1 %>
            Service Unavailable due to Surge Pricing
            <% else %>
            <%= @lyftd1 %>: $<%= @lyftp1.round(2) %>
            <% end %>
          </td>
        </tr>
        <% end %>
        <% if @route.passengers <=4 %>
        <tr>
          <% if @surge2 > 1 %>
          <td class="danger">
            Regular
          </td>
          <td class="danger">
            <%= @uberd2 %>: <%= @uberp2 %>
          </td>
          <td class="danger">
            <%= @lyftd2 %>: $<%= (@lyftp2*0.85).round(0) %>-<%= (@lyftp2*1.15).round(0) %>
          </td>
          <% else %>
          <td>
            Regular
          </td>
          <td>
            <%= @uberd2 %>: <%= @uberp2 %>
          </td>
          <td>
            <%= @lyftd2 %>: $<%= (@lyftp2*0.85).round(0) %>-<%= (@lyftp2*1.15).round(0) %>
          </td>
          <% end %>

        </tr>
        <% end %>

        <tr>
          <% if @surge3 > 1 %>
          <td class="danger">
            Large
          </td>
          <td class="danger">
            <%= @uberd3 %>: <%= @uberp3 %>
          </td>
          <td class="danger">
            <%= @lyftd3 %>: $<%= (@lyftp3*0.85).round(0) %>-<%= (@lyftp3*1.15).round(0) %>
          </td>
          <% else %>
          <td>
            Large
          </td>
          <td>
            <%= @uberd3 %>: <%= @uberp3 %>
          </td>
          <td>
            <%= @lyftd3 %>: $<%= (@lyftp3*0.85).round(0) %>-<%= (@lyftp3*1.15).round(0) %>
          </td>
          <% end %>
        </tr>

