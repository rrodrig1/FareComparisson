  <div class="btn-group btn-group-justified">
    <a href="/routes/<%= @route.id %>" class="btn btn-info">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    <a href="/routes" class="btn btn-default">
      <i class="fa fa-home" aria-hidden="true"></i>
    </a>
  </div>
</div>

